<h3>Команда</h3>
<table class="tbl">
    <tr>
        <td class="ltitle">Название:</td>
        <td>[% rec.name %]</td>
    </tr>
    <tr>
        <td class="ltitle">Блок:</td>
        <td>[% IF rec.blok.id %]<a title="Просмотр блока" alt="Просмотр блока" href="[% rec.blok.href_info %]">[% rec.blok.name %]</a>[% ELSE %]-[% END %]</td>
    </tr>
    <tr>
        <td class="submit" colspan="2">
            <a href="[% rec.href_edit %]">изменить</a>
        </td>
    </tr>
</table>

<br />

<h3>Аусвайсы</h3>
<table class="tbl">
    <tr class="title">
        <td width="100">[% INCLUDE 'sort.tt' field='numid', name='Номер' %]</td>
        <td width="200">[% INCLUDE 'sort.tt' field='name', name='Ник' %]</td>
        <td width="100">[% INCLUDE 'sort.tt' field='blocked', name='Блокировка' %]</td>
        <td></td>
    </tr>
[% IF ausweis_list.size > 0 %]
[% FOREACH ausweis_list %]
    <tr[% IF blocked %] class="grey"[% END %]>
        <td><a title="Просмотр аусвайса" alt="Просмотр аусвайса" href="[% href_info %]">[% numid %]</a></td>
        <td><a title="Просмотр аусвайса" alt="Просмотр аусвайса" href="[% href_info %]">[% nick %]</a></td>
        <td>[% IF blocked %]ЗАБЛОКИРОВАН[% END %]</td>
        <td>&nbsp;</td>
    </tr>
[% END %]
[% ELSE %]
    <tr><td colspan="4" style="height:50px;text-align:center;vertical-align:middle;">
        ничего не найдено
    </td></tr>
[% END %]
    <tr><td colspan="4" class="submit">
        <a href="[% rec.href_aus_adding %]">добавить</a>
    </td></tr>
</table>


<br />

<h3>Эмблема</h3>
[% IF rec.photo %]
<img width="300" alt="[% rec.name %]" title="[% rec.name %]" src="[% rec.href_file('logo.site.jpg') %]" />
<br />
[% ELSE %]
<div style="color:red; text-weight:bold;">НЕТ</div>
[% END %]

