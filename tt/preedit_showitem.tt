            <table class="frame" width="100%">
            <tr>
            <td align="left"><input type="text" name="comment" size="80" /></td>
            <td align="right"><input type="submit" value=" Выполнить " /></td>
            </tr>
            </table>
        </td>
    </tr>
    </form>
    <tr>
        <td class="submit" colspan="3">
            <a href="[% href_skipitem %]">пропустить</a>
        </td>
    </tr>
</table>

